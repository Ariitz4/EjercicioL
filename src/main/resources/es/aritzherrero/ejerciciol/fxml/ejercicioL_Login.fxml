<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.aritzherrero.ejerciciol.Control.EjercicioL_Login_Control">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Label text="Usuario:"/>
        <TextField fx:id="txtUsuario" />
    </HBox>

    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Label text="Password:"/>
        <TextField fx:id="txtPassword"/>
    </HBox>

    <Button text="Login" onAction="#login" prefWidth="100"/>
</VBox>
